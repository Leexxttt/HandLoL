<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/tujicard"
    android:clickable="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <TextView
        android:textSize="16sp"
        android:textColor="@color/text_normal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="八强场馆：绝美壮丽芝加哥剧院"
        android:id="@+id/tujiTitle"
        />
    <TextView
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="古色古香的剧院里进行最新潮的电竞赛事，两种文化的冲击为观众带来最京的观赛感受"
        android:ellipsize="end"
        android:lines="2"
        android:id="@+id/tujiTitlesmall"
        />
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <ImageView
                android:id="@+id/tuji_big"
                android:padding="7dp"
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:src="@mipmap/tujibig"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <LinearLayout
                android:layout_toRightOf="@id/tuji_big"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_top"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:src="@mipmap/tuji3"
                    android:scaleType="centerCrop"
                    />

                <FrameLayout
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/pic_bot"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:background="@mipmap/tuji2"
                    android:scaleType="centerCrop"
                    />
                    <TextView
                        android:id="@+id/num_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17张"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="16sp"
                        />
                </FrameLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/time"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1小时前"
            android:layout_centerVertical="true"
            />
            <LinearLayout
                android:id="@+id/tuji"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_tuji"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:gravity="center">

                <TextView
                    android:padding="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rune_quintessence_rect"
                    android:text="图集"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>




</android.support.v7.widget.CardView>